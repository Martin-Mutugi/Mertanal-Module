<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= service %> Form</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1><%= service %> Form</h1>

  <form action="/addData/<%= service %>?personalNumber=<%= personalNumber %>" method="POST">
    <!-- Ensure Personal Number is captured in the form -->
    <label for="PersonalNumber">Personal Number:</label>
    <input type="text" id="PersonalNumber" name="PersonalNumber" required>

    <!-- Other form fields for Patient Registration -->
    <% fields.forEach(field => { %>
      <label for="<%= field %>"><%= field %>:</label>
      <input type="text" id="<%= field %>" name="<%= field %>" required>
    <% }); %>

    <button type="submit">Submit</button>
  </form>
</body>
</html>
