<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Use 'service' instead of 'table' for the title -->
  <title>Submit Data for <%= service.replace(/([A-Z])/g, ' $1').trim() %></title>
  <link rel="stylesheet" href="/styles.css">  <!-- Link to static CSS -->
</head>
<body>
  <h1><%= service %> Form</h1> <!-- Dynamically display the service name -->

  <!-- Form for submitting data for the selected service -->
  <form action="/addData/<%= service %>?personalNumber=<%= personalNumber %>" method="POST">
    <!-- Hidden input to store personal number -->
    <input type="hidden" name="personalNumber" value="<%= personalNumber %>">

    <!-- Dynamically render the form fields -->
    <% fields.forEach(field => { %>
      <label for="<%= field %>"><%= field %>:</label>
      <input type="text" id="<%= field %>" name="<%= field %>" required>
    <% }); %>

    <button type="submit">Submit</button>
  </form>
</body>
</html>
