<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Data for <%= table.replace('table', ' ') %></title>
  <link rel="stylesheet" href="/styles.css"> <!-- Link to your CSS file -->
</head>
<style>
  
</style>

<body background-color: #e8f5e9;
>
  <h1>Edit Data for <%= table.replace('table', ' ') %></h1>

  <!-- Edit form starts here -->
  <form action="/edit/<%= table %>/<%= id %>" method="POST">
    <table class="form-table">
      <% for (let field in data) { %>
        <tr>
          <!-- Display the label for each field -->
          <td><label for="<%= field %>"><%= field.replace(/([A-Z])/g, ' $1').toUpperCase() %>:</label></td>
          
          <!-- Display the corresponding input field with pre-filled value -->
          <td><input type="text" id="<%= field %>" name="<%= field %>" value="<%= data[field] %>" required></td>
        </tr>
      <% } %>
      <tr>
        <td colspan="2" style="text-align: center;">
          <button type="submit">Update</button>
        </td>
      </tr>
    </table>
  </form>
</body>
</html>
